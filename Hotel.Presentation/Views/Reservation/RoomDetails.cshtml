@model Hotel.Domain.Entities.Room
@{
    ViewData["Title"] = "Details";
}



<!-- Page Content -->
<div class="container">
    <h1>Details</h1>

    <!-- Portfolio Item Heading -->
    <h1 class="my-4">
        Pokój
        <small>@Html.DisplayFor(model => model.Type.NameRoomType) @Html.DisplayFor(model => model.Capacity) os.</small>
    </h1>

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-4">
            <h3 class="my-3">Opis: </h3>
            <p>@Html.DisplayFor(model => model.Description)</p>
            <h3 class="my-3">Szczegóły:</h3>
            <ul>
                <li>Cena:  @Html.DisplayFor(model => model.Type.Price) zł/noc </li>
                <li>Max. osób: @Html.DisplayFor(model => model.Capacity) </li>

            </ul>

        </div>

    </div>
    <br />




</div>
<!-- /.container -->