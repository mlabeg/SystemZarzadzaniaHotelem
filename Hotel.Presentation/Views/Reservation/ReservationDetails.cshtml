@model Hotel.Domain.Entities.Reservation

<!DOCTYPE html>
<html>
<head>
    <title>Informacje o Rezerwacji</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h1>Podaj dane rezerwacji do sprawdzenia:</h1>

        <form method="post">
            <div class="mb-3">
                <label for="NumberOfReservation" class="form-label">Podaj numer rezerwacji:</label>
                <input type="number" class="form-control" id="NumberOfReservation" name="NumberOfReservation" />
            </div>

            <div class="mb-3">
                <label for="EmailAddress" class="form-label">Podaj adres email użyty przy rezerwacji:</label>
                <input type="text" class="form-control" id="EmailAddress" name="EmailAddress" />
            </div>

            <button type="submit" class="btn btn-primary">Pokaż informacje</button>
        </form>

        @if (Model != null)
        {
            <div class="border p-3 mt-4">
                <p>Numer rezerwacji: @Model.Id</p>
                <p>Data rezerwacji od: @Model.DateFrom.ToShortDateString()</p>
                <p>Data rezerwacji do: @Model.DateTo.ToShortDateString()</p>
                <p>Ilość Osób: @Model.NumberOfGuests</p>
                <p>Czy zameldowano: @(Model.CheckedIn ? "Tak" : "Nie")</p>
                <p>Cena całkowita: @Model.PriceTotal</p>
                <p>Imię i nazwisko gościa: @Model.Person.Name @Model.Person.Surname</p>
            </div>

            <div class="mt-3">
                <a class="btn btn-sm btn-outline-secondary" asp-action="CancelReservation" asp-route-id="@Model.Id">Anuluj rezerwację</a>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
